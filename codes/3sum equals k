
/* Problem Statement: Given a string with repeated characters, we have to insert "*" between the pair of identical characters
Examples: 
1.  Input: a[] = {12,3,7,1,6,9}, target = 24
    Output : 1 or true (12,3,9) 
2.  Input: a[] = {12,3,7,1,6,9}, target = 24
    Output : 0 or false
*/
--------------------------------------------------------------------------------------------------------------------------------------------------------------------------
#include <bits/stdc++.h>
using namespace std;

bool solve(int a[],int n,int target)
{
    for(int i = 0; i < n; i++)
    {
        int low = i+1 , high = n-1;
        while(low < r)
        {
            int sum = a[low] + a[high] + a[i];
            if(sum == k) 
                 return 1;
            else if(sum < k) 
                low++;
            else 
                high--;
        }
    }
    return 0;
}

int main() {
    int a[]={12,3,7,1,6,9};
    int n=sizeof(a)/sizeof(a[0]);
    cout<<solve(a,n,24);
    return 0;
}
